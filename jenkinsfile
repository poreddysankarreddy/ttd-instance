pipeline {
    agent {label 'linux-node'
    stages {
     stage('clean') { 
		tools {
			maven ‘mvn3.8.5’
		}
            steps {
                echo 'from clean stage'
            }
        }
        stage('Build') { 
		tools {
			maven ‘mvn3.8.5’
		}
            steps {
                echo 'from build stage'
            }
        }
        stage('Test') { 
            steps {
                echo 'from Test stage'
            }
        }
        stage('Deploy') { 
            steps {
                echo 'from Deploy stage'
            }
        }
    }
	post{
		failure{
			echo 'job was not build it was failed'
		}
		success{
			echo 'job was build successfully'
		}
	}
}
